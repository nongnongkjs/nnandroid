<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
    <include layout="@layout/top"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/txt_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableBottom="@drawable/bg_line_1"
            android:gravity="center"
            android:text="全部"
            android:textColor="@color/text_33_99"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/txt_daifk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableBottom="@drawable/bg_line_1"
            android:gravity="center"
            android:text="待付款"
            android:textColor="@color/text_33_99"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/txt_daifh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableBottom="@drawable/bg_line_1"
            android:gravity="center"
            android:text="待发货"
            android:textColor="@color/text_33_99"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/txt_daish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableBottom="@drawable/bg_line_1"
            android:gravity="center"
            android:text="待收货"
            android:textColor="@color/text_33_99"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/txt_daipj"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableBottom="@drawable/bg_line_1"
            android:gravity="center"
            android:text="待评价"
            android:textColor="@color/text_33_99"
            android:textSize="@dimen/sp_13" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_has"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:src="@mipmap/meiyoudingdan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂时没有商品订单~~"
            android:layout_marginTop="20dp"
            android:textSize="13sp"
            android:textColor="@color/text_66"/>
    </LinearLayout>
    <com.maapuu.mereca.view.WanRecycleView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.maapuu.mereca.view.WanRecycleView>
</LinearLayout>
